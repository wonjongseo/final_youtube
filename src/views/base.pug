doctype html
html(lang="ko")
    head
        title #{titlePage} | Youtube 
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        header
            h1=titlePage
            nav
                ul 
                    li 
                        a(href="/") Home
                    if loggedIn
                        li 
                            a(href="/users/logout") Logout
                        li 
                            a(href="/users/edit") #{loggedInUser.name}'s profile
                    else
                        li 
                            a(href="/login") Login    
                        li 
                            a(href="/join") Join     
                        
                    li 
                        a(href="/videos/upload") Upload
                    li 
                        a(href="/Search") Search    
        main 
            block content
    include partials/footer.pug